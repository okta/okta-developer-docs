{
  "private": true,
  "workspaces": [
    "packages/@okta/*"
  ],
  "scripts": {
    "dev": "yarn workspace @okta/vuepress-site dev",
    "build": "yarn workspace @okta/vuepress-site build",
    "check-links": "yarn build && yarn start-web-server & yarn test:wait-on-local && yarn do-link-checks; yarn stop-web-server",
    "do-link-checks": "npx blc http://localhost:8080 -ro --exclude /img --exclude /assets --exclude /fonts --exclude /docs/api/postman --exclude /favicon",
    "migrate": "yarn workspace @okta/migrate-from-jekyll migrate",
    "test": "yarn dev & yarn test:test-local && yarn stop-all",
    "test-only": "yarn test:update-web-driver && protractor tests/selenium/conf.js && yarn stop",
    "test:test-local": "yarn test:wait-on-local && yarn test-only || (yarn stop && exit 1)",
    "test:update-web-driver": "./node_modules/protractor/bin/webdriver-manager update --gecko false --versions.standalone 3.141.59",
    "test:stop-web-driver": "pkill -f 'webdriver-manager/selenium' || echo 'no Selenium processes found'",
    "test:wait-on-local": "wait-on http-get://localhost:8080/test_page/",
    "markdown-lint": "node scripts/markdown-check",
    "posttest": "yarn stop",
    "stop": "if-env CI=true && exit 0 || yarn test:stop-web-driver || echo 'done'",
    "stop-all": "if-env CI=true && exit 0 || pkill -f 'yarn' || echo 'done'",
    "update-event-types": "bash scripts/update-event-types.sh",
    "start-web-server": "cd packages/@okta/vuepress-site/dist && npx serve -l 8080&",
    "stop-web-server": "pkill -f 'npx serve' || echo 'Web Server process not found'"
  },
  "repository": "git@github.com:okta/okta.github.io",
  "author": "Brian Retterer <brian.retterer@okta.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "*",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "if-env": "^1.0.4",
    "mocha": "^5.2.0",
    "protractor": "^5.4.2",
    "recursive-readdir": "^2.2.2",
    "remove": "^0.1.5",
    "wait-on": "^3.2.0",
    "wait-until": "^0.0.2"
  },
  "dependencies": {
    "broken-link-checker": "^0.7.8",
    "hoek": "^6.1.3",
    "joi": "^14.3.1",
    "serve": "^11.0.0"
  },
  "resolutions": {
    "http-server/ecstatic": "^4.0.0"
  }
}
